<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E0ED"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This App contains"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1- To use this apps, you must first register."
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2- For security you need to login, with email and password."
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3- With this apps you can easily keep track of your daily income."
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4- With this apps you can easily keep track of your daily expenses."
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5- You can change the required options from the setting options."
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/me"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sakhawat Hossain Khondoker"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#2196F3"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >



            <ImageView
                android:id="@+id/fac_id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fac"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/email_id"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/email"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/instra_id"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/insteagram"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>